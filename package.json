    {
      "email": "eric.lara@axa.com",
      "name": "Eric Lara"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/axa-group/nlp.js-app.git"
  },
  "dependencies": {
    "@hapi/hapi": "^18.4.1",
    "braces": "^2.3.2",
    "dotenv": "^6.1.0",
    "hapi-swagger": "^9.1.2",
    "hapi-swagger-static": "^2.0.12",
    "inert": "^5.1.3",
    "joi": "^14.3.1",
